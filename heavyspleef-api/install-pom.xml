<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.xaniox</groupId>
	<artifactId>heavyspleef-api</artifactId>
	<version>2.4</version>
	<packaging>jar</packaging>
	<name>HeavySpleef-API</name>
	<description>Add-On API for the Spleef plugin HeavySpleef</description>
	<url>http://dev.bukkit.org/bukkit-plugins/heavyspleef/</url>
	<inceptionYear>2014-2016</inceptionYear>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<worldedit.version>6.0.0-SNAPSHOT</worldedit.version>
	</properties>
	<developers>
		<developer>
			<id>xaniox</id>
			<name>Matthias Werning</name>
		</developer>
	</developers>
	<licenses>
		<license>
			<name>GNU General Public License Version 3</name>
			<url>https://www.gnu.org/licenses/gpl-3.0.txt</url>
		</license>
	</licenses>
	<ciManagement>
		<system>Jenkins</system>
		<url>http://ci.xaniox.de</url>
	</ciManagement>
	<scm>
		<url>https://github.com/xaniox/HeavySpleef-2.0</url>
		<connection>scm:git:git://github.com/xaniox/HeavySpleef.git</connection>
		<developerConnection>scm:git:git@github.com:xaniox/HeavySpleef.git</developerConnection>
	</scm>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.2</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<archive>
						<manifestEntries>
							<name>${project.name}</name>
							<version>${project.version}</version>
						</manifestEntries>
					</archive>
					<outputDirectory>target</outputDirectory>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
			<id>spigot-repo</id>
			<name>Spigot's repository</name>
			<url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
		</repository>
		<repository>
			<id>vault-repo</id>
			<name>vault's repository</name>
			<url>http://nexus.theyeticave.net/content/repositories/pub_releases</url>
		</repository>
		<repository>
			<id>sk89q-repo</id>
			<name>sk89q's repository</name>
			<url>http://maven.sk89q.com/repo</url>
		</repository>
		<repository>
			<id>dmulloy2-repo</id>
			<url>http://repo.dmulloy2.net/content/groups/public</url>
		</repository>
	</repositories>
	<dependencies>
		<dependency>
			<groupId>net.milkbowl.vault</groupId>
			<artifactId>VaultAPI</artifactId>
			<version>1.5</version>
		</dependency>
		<dependency>
			<groupId>com.comphenix.protocol</groupId>
			<artifactId>ProtocolLib</artifactId>
			<version>3.6.4-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.spigotmc</groupId>
			<artifactId>spigot-api</artifactId>
			<version>1.8.7-R0.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.sk89q.worldedit</groupId>
			<artifactId>worldedit-core</artifactId>
			<version>${worldedit.version}</version>
		</dependency>
		<dependency>
			<groupId>com.sk89q.worldedit</groupId>
			<artifactId>worldedit-bukkit</artifactId>
			<version>${worldedit.version}</version>
		</dependency>
	</dependencies>
</project>